      ]
    },
    {
      "description": "Keyboard Layer Setup",
      "manipulators": [
        {
          "description": "Keyboard Layer: set Layer-1",
          "type": "basic",
          "from": { "key_code": "backslash", "modifiers": { "mandatory": [ "command" ] } },
          "conditions": [ { "name": "klayer", "type": "variable_if", "value": 0 } ],
          "to": [ { "set_variable": { "name": "klayer", "value": 1 } } ]
        },
        {
          "description": "Keyboard Layer: set Layer-0",
          "type": "basic",
          "from": { "key_code": "backslash", "modifiers": { "mandatory": [ "command" ] } },
          "conditions": [ { "name": "klayer", "type": "variable_if", "value": 1 } ],
          "to": [ { "set_variable": { "name": "klayer", "value": 0 } } ]
        }
      ]
    }
  ]
}
