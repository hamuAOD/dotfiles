{
  "title": "Keyboard Layer",
  "rules": [
    {
      "description": "Keyboard Layer 1",
      "manipulators": [
        {
          "type": "basic",
          "conditions": [ { "name": "klayer", "type": "variable_if", "value": 1 } ],
          "from": { "key_code": "comma" },
          "to": [ { "key_code": "left_arrow" } ]
        },
        {
          "type": "basic",
          "conditions": [ { "name": "klayer", "type": "variable_if", "value": 1 } ],
          "from": { "key_code": "period" },
          "to": [ { "key_code": "right_arrow" } ]
        },
        {
          "type": "basic",
          "conditions": [ { "name": "klayer", "type": "variable_if", "value": 1 } ],
          "from": { "key_code": "h" },
          "to": [ { "key_code": "left_arrow" } ]
        },
        {
          "type": "basic",
          "conditions": [ { "name": "klayer", "type": "variable_if", "value": 1 } ],
          "from": { "key_code": "j" },
          "to": [ { "key_code": "down_arrow" } ]
