{
  "title": "TabVHyper",
  "rules": [
    {
      "description": "VHyper Setup",
      "manipulators": [
        {
          "type": "basic",
          "description": "Remap Tab to Virtual-Hyper key when held, Tab when tapped",
          "from": {
            "key_code": "tab"
          },
          "to": [
            {
              "set_variable": {
                "name": "vhyper",
                "value": 1
              }
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "vhyper",
                "value": 0
              }
            }
          ],
          "to_if_alone": [
            {
              "key_code": "tab"
            }
          ]
        }
      ]
    },
