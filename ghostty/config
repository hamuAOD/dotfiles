term = xterm-ghostty
shell-integration-features = sudo

### Keybind
keybind = super+o=write_screen_file:open
keybind = super+i=write_screen_file:paste
keybind = ctrl+;>t=toggle_quick_terminal
# Keybind: Tab
keybind = ctrl+;>c=new_tab
keybind = ctrl+;>x=close_surface
keybind = ctrl+;>shift+n=next_tab
keybind = ctrl+;>shift+p=previous_tab
# Keybind: Pane
keybind = ctrl+;>s=new_split:right
keybind = ctrl+;>shift+s=new_split:down
keybind = ctrl+;>a=new_split:down
keybind = ctrl+;>j=goto_split:bottom
keybind = ctrl+;>k=goto_split:top
keybind = ctrl+;>h=goto_split:left
keybind = ctrl+;>l=goto_split:right
keybind = ctrl+;>down=goto_split:bottom
keybind = ctrl+;>up=goto_split:top
keybind = ctrl+;>left=goto_split:left
keybind = ctrl+;>right=goto_split:right
keybind = ctrl+;>p=goto_split:previous
keybind = ctrl+;>n=goto_split:next
keybind = super+down=resize_split:down,30
keybind = super+up=resize_split:up,30
keybind = super+left=resize_split:left,30
keybind = super+right=resize_split:right,30
keybind = ctrl+;>e=equalize_splits
keybind = ctrl+;>z=toggle_split_zoom
# Page Scroll
keybind = ctrl+;>b=scroll_page_up
keybind = ctrl+;>f=scroll_page_down
# Key-Text
keybind = alt+left=text:\x1bb
keybind = alt+right=text:\x1bf
# Other
keybind = ctrl+;>f=reset_font_size
keybind = ctrl+;>r=reload_config
copy-on-select = clipboard
